@model List<ResultBookingDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayoutHome/_AdminLayout.cshtml";
	int count = 0;
}

<div class="table-responsive">
	<table class="table">
		<thead>
			<tr>
				<th>#</th>
				<th>Misafir</th>
				<th>Giriş Tarihi</th>
				<th>Çıkış Tarihi</th>
				<th>Durum</th>
				<th>Onayla</th>
				<th>İptal Et</th>
				<th>Beklet</th>
				<th>Güncelle</th>
				<th>Detaylar</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				count++;

				<tr>
					<th>@count</th>
					<th>@item.Name</th>
					<th>@(((DateTime)@item.Checkin).ToString("dd-MMM-yyyy"))</th>
					<th>@(((DateTime)@item.ChecOut).ToString("dd-MMM-yyyy"))</th>
					<td>
						<span class="badge badge-primary px-2">@item.Status</span>
					</td>
					<td><a href="/BookingAdmin/ApprovedReservation2/@item.BookingID" class="btn btn-outline-primary">Onayla</a></td>
					<td><a href="/BookingAdmin/CancelReservation2/@item.BookingID" class="btn btn-outline-danger">İptal Et</a></td>
					<td><a href="/BookingAdmin/WaitReservation2/@item.BookingID" class="btn btn-outline-warning">Beklet</a></td>
					<td><a href="/BookingAdmin/UpdateBooking/@item.BookingID" class="btn btn-outline-info">Güncelle</a></td>
					<td><a href="/BookingAdmin/UpdateBooking/@item.BookingID" class="btn btn-outline-dark">Detaylar</a></td>
				</tr>
			}
		</tbody>
	</table>
</div>


